<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailGambar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/a"
            android:src="@drawable/wkwk1"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"/>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/radius"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/a"
            android:id="@+id/ckck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/dokter1"
                    android:scaleType="centerCrop"
                    android:id="@+id/aa"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama dokter"
                        android:textSize="11sp"
                        android:id="@+id/bb"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:id="@+id/cc"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppinsregular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(123 review)"
                        android:id="@+id/dd"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="10sp"/>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/star"
                        android:layout_marginTop="3dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/ee"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:id="@+id/ff"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppinsregular"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ckck"
            android:layout_marginStart="40dp"
            android:id="@+id/hahaha">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/wkwk3"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/wkwk4"
                android:layout_marginTop="25dp"
                android:layout_marginStart="150dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:src="@drawable/wkwk2"
            android:layout_below="@+id/hahaha"
            android:layout_marginStart="40dp"
            android:id="@+id/akbar"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wkwk5"
            android:layout_below="@+id/akbar"
            android:layout_marginStart="40dp"
            android:id="@+id/bawah"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to payment"
            android:layout_below="@+id/bawah"
            android:backgroundTint="@color/ijo"
            android:layout_marginHorizontal="80dp"
            android:id="@+id/button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:text="cancel reservation"
            android:textSize="13sp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_centerHorizontal="true"/>








    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>